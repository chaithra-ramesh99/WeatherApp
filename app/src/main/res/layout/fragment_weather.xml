<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".WeatherFragment">
  // temp, Weather type, humidity, wind_speed)
  <!-- TODO: Update blank fragment layout -->

  <Button
          android:id="@+id/logout"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="log out"
          android:layout_margin="20dp"
          app:layout_constraintBottom_toTopOf="@+id/temp"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_marginBottom="24dp"/>

  <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="temp"
          app:layout_constraintTop_toBottomOf="@+id/logout"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:id="@+id/temp"
          android:textSize="25dp"
          android:textStyle="bold"
          android:layout_marginTop="24dp"
          />

  <TextView
          android:text="wtype"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/wtype"
          android:textSize="25dp"
          android:textStyle="bold"
          app:layout_constraintTop_toBottomOf="@+id/temp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_marginTop="16dp"/>

  <TextView
          android:text="humdity"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/humdity"
          android:textSize="25dp"
          android:textStyle="bold"
          app:layout_constraintTop_toBottomOf="@+id/wtype"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_marginTop="16dp"/>

  <TextView
          android:text="winspeed"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/winspeed"
          app:layout_constraintTop_toBottomOf="@+id/humdity"
          android:layout_marginTop="16dp"
          android:textSize="25dp"
          android:textStyle="bold"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>